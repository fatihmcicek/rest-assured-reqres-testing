<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ReqRes API Test Suite" parallel="methods" thread-count="3">
    <test name="User Management Tests">
        <groups>
            <run>
                <include name="get"/>
                <include name="post"/>
                <include name="put"/>
                <include name="patch"/>
                <include name="delete"/>
            </run>
        </groups>
        <packages>
            <package name="com.restassured.reqres.tests.*"/>
        </packages>
    </test>
</suite>